<!DOCTYPE html!>
<html>
  <head>
    <title>{{mod.name}} items</title>
    <link rel="stylesheet" href="style.css">
    <script src="https://kryogenix.org/code/browser/sorttable/sorttable.js"></script>
  </head>
  <body>
    {% if mod.cards %}
    <h1>{{mod.name}} cards</h1>
    {% include 'classpath:../fragments/cards.html.twig' %}
    {% endif %}

    {% if mod.relics %}
    <h1>{{mod.name}} relics</h1>
    {% include 'classpath:../fragments/relics.html.twig' %}
    {% endif %}

    {% if mod.potions %}
    <h1>{{mod.name}} potions</h1>
    {% include 'classpath:../fragments/potions.html.twig' %}
    {% endif %}

    {% if mod.keywords %}
    <h1>{{mod.name}} keywords</h1>
    {% include 'classpath:../fragments/keywords.html.twig' %}
    {% endif %}

    {% if mod.augments %}
    <h1>{{mod.name}} augments</h1>
    {% include 'classpath:../fragments/augments.html.twig' %}
    {% endif %}

    {% if mod.nodemodifiers %}
    <h1>{{mod.name}} nodemodifiers</h1>
    {% include 'classpath:../fragments/nodemodifiers.html.twig' %}
    {% endif %}

    {% if mod.creatures %}
    <h1>{{mod.name}} creatures</h1>
    {% include 'classpath:../fragments/creatures.html.twig' %}
    {% endif %}
  </body>
</html>